{
	"compilerOptions": {
		"allowJs": true,
		"resolveJsonModule": true,
		"target": "ESNext",
		"module": "commonjs",
		"declaration": true,
		"outDir": "./lib",
		"strict": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"baseUrl": "src",
		"paths": {
			"*": ["*"]
		},
		"noUnusedLocals": false,
		"noUnusedParameters": false
	},

	"include": ["src"],
	"exclude": ["node_modules", "**/__tests__/*"]
}
